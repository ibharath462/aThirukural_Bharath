<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1280px"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutMaster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#1A1918"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/strava_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#1A1918"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="STRAVA"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/paal"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Arathupal"
                 />

            <TextView
                android:id="@+id/date"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10/08/2019"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kuralLayout"
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:background="#1A1918"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kural"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:background="@drawable/kural"
                android:textColor="@android:color/white"
                android:text="" />

            <TextView
                android:id="@+id/transliteration"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"

                />

            <TextView
                android:id="@+id/meaning"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/amma"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:gravity="left"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/urai"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text=""
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/strava_stats"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/kural"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kEditText"
                android:layout_width="80dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <Button
                android:id="@+id/search"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/colorAccent"
                android:text="S"
                android:hint="kNo"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/copy"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/colorAccent"
                android:text="W"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/gmail"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:text="G"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Sh"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>