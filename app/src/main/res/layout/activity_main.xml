<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1280px"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutMaster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/strava_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#80cbc4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="STRAVA"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/paal"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Arathupal"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10/08/2019"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kuralLayout"
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:foreground="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kuralLayout"
                android:layout_width="match_parent"
                android:layout_height="239px"
                android:foreground="@drawable/kural"
                android:background="@drawable/kural"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/strava_stats"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0013FF00"
                android:foreground="@android:color/holo_green_dark"
                android:foregroundTint="#63FFFFFF"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>